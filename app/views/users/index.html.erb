



<div class="container">

  <h2>ユーザー</h2>

  <% @users.each do |user| %>
     <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
       <%= profile_img(user) %>
        <br>  <%= user.name %></br>
        <br>  <%= user.company_name %></br>
        <br>  <%= user.department %></br>

           <%if  user.id != current_user.id -%>
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
     <%=link_to user_path(user) do %>
       <% end %>
         <br>  <%= link_to "詳細",user_path(user), class: 'btn btn-default btn-sm btn-success' %></br>

        <% end %>


         <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>
      </div>
  <% end %>
</div>
