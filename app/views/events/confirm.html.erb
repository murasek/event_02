<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <%= form_for(@event) do |f| %>
      <%= f.hidden_field :title %>
      <p>タイトル:<%= @event.title %></p>
      <%= f.hidden_field :content %>
        <%= f.hidden_field :opening_time %>
        <p>開始時間:<%= @event.opening_time %></p>
　　　  <%= f.hidden_field :ending_time %>
　　　　<p>終了時間:<%= @event.ending_time %></p>
      <p>画像  <%= image_tag (@event.image.url) if @event.image.url.present? %></p>
        <%= f.hidden_field :image_cache %>
        <%= hidden_field_tag :"cache[image]", @event.image.cache_name %>


      <p>本文:<%= @event.content %></p>
      <%= f.submit "登録",class: 'btn btn-success btn-block' %>
        <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
    <%= form_for(@event, url: new_event_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
<%= f.hidden_field_tag :opening_time %>
<%= f.hidden_field_tag :ending_time %>
    <%= hidden_field_tag :"cache[image]",@event.image.cache_name %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
