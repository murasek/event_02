<%= form_for(@event, url:choose_new_or_edit) do |f| %>
<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= @event.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>

<% end %>




 <%= f.label :タイトル %>
 <%= f.text_field :title, class: 'form-control' %>
<%= f.label :内容 %>
<%= f.text_field :content, class: 'form-control' %>
<%= f.label :画像 %><br />
<%= image_tag(@event.image) if @event.image.present? %>
<%= f.file_field :image %>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
