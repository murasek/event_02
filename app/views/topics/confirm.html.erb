<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <%= form_for(@topic) do |f| %>
      <%= f.hidden_field :title %>
      <p>タイトル:<%= @topic.title %></p>
      <%= f.hidden_field :content %>
      <p>画像  <%= image_tag (@topic.image.url) if @topic.image.url.present? %></p>
        <%= f.hidden_field :image_cache %>
        <%= hidden_field_tag :"cache[image]", @topic.image.cache_name %>


      <p>本文:<%= @topic.content %></p>
      <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@topic, url: new_topic_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>

    <%= hidden_field_tag :"cache[image]",@topic.image.cache_name %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
